.button-container {
    padding: 8px;
    flex-direction: row;
    justify-content: center;
    align-content: center;
}

.button {
    background-color: rgb(47, 47, 47);
    padding: 8px;
    font-size: 16px;
}

.button:hover {
    border-color: rgb(255, 255, 255);
}

.button:active {
    background-color: rgb(92, 92, 92);
}
